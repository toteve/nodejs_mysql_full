{{!-- codigo de LIST  y el head con footer los colocara main.hbs --}}
<div class="container p-4">
    <div class="row">

        {{!-- Especie de For-If por cada links que se encuentre almacenado de ese usuario --}}
        {{#each links}}
        <div class="col-md-3">
            {{!-- Inicio de Tarjeta Centrada --}}
            <div class="card text-center">
                {{!-- Cuerpo de Tarjeta Centrada --}}
                <div class="card-body">
                    {{!-- Mostrar campos {{url}} {{title}} {{description}} y {{timeago created_at}} --}}
                    <a href="{{url}}" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{title}} 
                        </h3>
                    </a>
                    <p class="m-2">{{description}}</p>
                    <p class="text-muted">
                        {{timeago created_at}}
                    </p>

                    {{!-- Dos botones uno Borrar y otro Editar cada uno llama a una ruta construida en el
                          archivo link.js pasando como parametro su {{id}} --}}
                    <a class="btn btn-danger" href="/links/delete/{{id}}">
                        Delete Link
                    </a>
                    <a class="btn btn-secondary" href="/links/edit/{{id}}">
                        Edit
                    </a>

                </div>
            </div>
        </div>
        
        {{!-- Especie de else para mostrar en caso no haber links almacenados ese usuario --}}
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>There are not Links saved yet.</p>
                {{!-- lo envia a la ruta /links/add para crear un enlace o links --}}
                <a href="/links/add">Create One!</a>
            </div>
        </div>
        {{/each}}
        {{!-- Especie fin de bloque each --}}

    </div>
</div>